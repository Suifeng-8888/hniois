<script type="text/javascript">
    /*获取生产基地信息及经纬度*/
    window.onload = function() {
        //加载后台展示数据
        $.ajax({
            url: BaseUrl + "showStatics/findCount.do",
            data: "",
            type: "post",
            dataType: 'json',
            success: function (data) {
                $("#myStat1").text(data.count1 + ' 家');//生产基地
                $("#myStat2").text(data.count2 + ' 个');//检测报告数量
                $("#myStat3").text(data.count8 + ' 个');//三品一标产品
                $("#myStat4").text(data.count3 + ' 家');//监管机构
                $("#myStat5").text(data.count4 + ' 家');//农资供应商
                $("#myStat6").text(data.count5 + ' 条');//监管记录
                $("#myStat7").text(data.count6 + ' 家');//销售站点
                $("#myStat8").text(data.count7 + ' 次');//监管投诉数量
            }
        });
        $.ajax({
            url: BaseUrl + "providers/findList",
            data: "",
            type: "post",
            dataType:'json',
            success: function(data){
                //创建标注点并添加到地图中
                function addMarker(data) {
                    //循环建立标注点
                    for(var i = 0; i < data.length; i++) {
                        var point = new BMap.Point(data[i].p_longitude, data[i].p_latitude); //将标注点转化成地图上的点
                        var marker = new BMap.Marker(point); //将点转化成标注点
                        map.addOverlay(marker);  //将标注点添加到地图上
                        //添加监听事件
                        (function() {
                            var thePoint = data[i];
                            marker.addEventListener("click",
                                function() {
                                    showInfo(this,thePoint);
                                });
                        })();
                    }
                }
                function showInfo(thisMarker,point) {
                    //获取点的信息
                    var sContent =
                        '<ul style="margin:0 0 5px 0;padding:0.2em 0">'
                        +'<li style="line-height: 26px;font-size: 12px;">' +'名称: '+ point.p_name + '</li>'
                        +'<li style="line-height: 26px;font-size: 12px;">' +'地址: '+ point.p_address + '</li>'
                        +'<li style="line-height: 26px;font-size: 12px;">' +'电话: '+ point.p_phone + '</li>'
                        +'</ul>';
                    var infoWindow = new BMap.InfoWindow(sContent); //创建信息窗口对象
                    thisMarker.openInfoWindow(infoWindow); //图片加载完后重绘infoWindow
                }
                // 百度地图API功能
                var map = new BMap.Map("map");
                map.centerAndZoom(new BMap.Point(113.2939905300,33.7225028056), 11);// 初始化地图,设置中心点坐标和地图级别
                map.enableScrollWheelZoom(true);// 开启鼠标滚轮缩放
                map.addControl(new BMap.NavigationControl());//开启放大缩小按钮
                addMarker(data);
            }
        });

        $.ajax({
            url: BaseUrl + "article/indexArt",
            data: "",
            type: "get",
            dataType: "json",
            success: function (res) {
                var articleList = res.articleList;
                var len;
                if(articleList.length>3){
                    len=3;
                }else{
                    len=articleList.length;
                }
                var html = "";
                for(var i = 0; i < len; i++) {
                    html += "<div class='col-sm-6 col-md-4'>" +
                    "<div class='thumbnail'>" +
                    "<img src='"+ imgPath + articleList[i].picture +"'>" +
                    "<div class='caption'>" +
                    "<h3 class='blue'>"+articleList[i].title+"</h3>" +
                    "<p>" + articleList[i].subtitle + "</p>" +
                    "<p>" +
                    "<a href='detaile.html?id="+articleList[i].id+"' class='btn btn-default blue' role='button'>" + "查看详情" + "</a>" +
                    "</p>" +
                    "</div>" +
                    "</div>" +
                    "</div>"
                }
                $("#articleList").html(html);
            }
        });
    }
</script>
