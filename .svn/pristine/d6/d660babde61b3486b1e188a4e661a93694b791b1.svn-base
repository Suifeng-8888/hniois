       ) as tempForm
    </select>
    <!--支出汇总表-->
    <select id="total" parameterType="com.hniois.monitor.entity.Buy" resultType="com.hniois.monitor.entity.Buy">
        SELECT b_name,SUM(b_number*b_price) as 'out' from r_buy GROUP BY b_name
        union ALL
        SELECT '总计',SUM(price.out) FROM
        (
            SELECT b_name,SUM(b_number*b_price) as 'out' from r_buy GROUP BY b_name
        ) as price
